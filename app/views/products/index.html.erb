<h1>Welcome here</h1>

<p>All Products</p>

<% @products.each_with_index do |product, index| %>
  <div>
    <strong>Product <%= index + 1 %>:</strong><br>
    Title: <%= product.title %><br>
    Description: <%= product.description %><br>
    Price: <%= product.price %><br>
    <br/>
    <%= link_to "Edit product", edit_product_path(product)%> | <%= form_with url: product_path(product), method: :delete do%>
                                                                <%= submit_tag 'Delete Product', data: { confirm: "Are you sure?" } %>
                                                                <%end%>

<%end%>



<br/>
<br/>
Want to create new product? <%= link_to 'Click here', new_product_path%>


<h1>Create New Product</h1>


<br/>

<%= form_with model: @product,  local: true do |form|%>
<div>

    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>

    </div>
    <br/>

    <div>
        <%= form.label :description %>
        <%= form.text_field :description %>

    </div>
    <br/>

    <div>
        <%= form.label :price %>
        <%= form.number_field :price %>

    </div>
    <br/>

    <div>
        <%= form.submit 'Create Product' %>

    </div>
</div>

<%end%>
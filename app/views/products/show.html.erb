<h1><%= @product.title %></h1>
<p><%= @product.description %></p>

<p>Price: <%= @product.price %></p>
<%= link_to 'Back to Products', products_path %> | <%= form_with url: product_path(@product), method: :delete do %>
  <%= submit_tag "Delete Product", data: { confirm: "Are you sure?" } %>
<% end %>
